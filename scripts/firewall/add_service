
function add_service()
{
    if [ $(id -u) != 0 ]
    then
        echo -e "$RED Error:$NRM Only root user can run this function!"
        exit 1
    fi

    if [ ! -z "$1" ]
    then
        zone=$(firewall-cmd --get-default-zone)

        if [ ! -z "$zone" ]
        then
            service=$(firewall-cmd --zone=$zone --permanent --add-service=$1)
            
            if [ "$service" == "success" ]
            then
                echo "$1 service added!"
            else
                echo "$1 service not added!"
            fi
            
            reload=$(firewall-cmd --reload)
            
            if [ "$reload" == "success" ]
            then
                echo "firewall reloaded!"
            else
                echo "firewall not reloaded!"
            fi
        fi
    else
        echo -e "$YLW Usage:$NRM $PRG firewall add_service <service|{service,service...}>"
    fi
}

